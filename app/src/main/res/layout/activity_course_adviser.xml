<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CourseAdviser"
    android:id="@+id/s">

    <TextView android:text="Please Choose the Term:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info1"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Spinner
        android:id="@+id/TermsListComboBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:layout_below="@+id/info1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:entries="@array/TermsList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Courses"
        android:id="@+id/DisplayButton"
        android:onClick="Clicked"
        android:layout_below="@+id/TermsListComboBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CoursesListingOutput"
        android:layout_below="@+id/DisplayButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:gravity="center"/>

</RelativeLayout>
